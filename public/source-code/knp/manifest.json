{
  "manifest_version": 3,
  "name": "Kinopoisk Free Watch Buttons",
  "version": "1.0",
  "description": "Добавляет кнопки 'Смотреть бесплатно' на Kinopoisk",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://www.kinopoisk.ru/film/*",
    "https://www.kinopoisk.ru/series/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.kinopoisk.ru/film/*",
        "https://www.kinopoisk.ru/series/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
} 